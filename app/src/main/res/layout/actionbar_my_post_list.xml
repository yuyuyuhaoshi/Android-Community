<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/offset_20dp"
    android:paddingRight="@dimen/offset_20dp"
    android:paddingTop="@dimen/offset_10dp">

    <ImageView
        android:layout_width="@dimen/offset_30dp"
        android:layout_height="@dimen/offset_30dp"
        android:src="@drawable/return_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/mine_my_post"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_large_high" />

    <ImageView
        android:layout_width="@dimen/offset_30dp"
        android:layout_height="@dimen/offset_30dp" />

</LinearLayout>