<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/offset_14dp"
    android:paddingLeft="@dimen/offset_14dp"
    android:paddingRight="@dimen/offset_14dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文章标题"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/font_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_post_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tags"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_normal"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/my_post_views_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_6dp"
                android:text="点击"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/my_post_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_20dp"
                android:text="50"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_6dp"
                android:layout_weight="1"
                android:text="回复"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_normal"/>
        </LinearLayout>


        <TextView
            android:id="@+id/my_post_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一月5日"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:layout_marginTop="@dimen/offset_10dp"
        android:background="@color/colorDivider" />


</LinearLayout>