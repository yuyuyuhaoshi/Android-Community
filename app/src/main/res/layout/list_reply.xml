<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/offset_30dp"
            android:layout_height="@dimen/offset_30dp"
            android:src="@mipmap/via" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_10dp"
            android:layout_marginTop="@dimen/offset_6dp"
            android:layout_weight="1"
            android:text="我的名字"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_normal" />

        <ImageView
            android:layout_width="@dimen/offset_30dp"
            android:layout_height="@dimen/offset_30dp"
            android:src="@mipmap/good" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_10dp"
            android:layout_marginTop="@dimen/offset_6dp"
            android:text="290"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_normal" />

        <ImageView
            android:layout_width="@dimen/offset_30dp"
            android:layout_height="@dimen/offset_30dp"
            android:layout_marginLeft="@dimen/offset_10dp"
            android:src="@mipmap/more" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temporary_reply"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/font_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一小时前"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_10dp"
            android:text="@string/reply"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_normal" />

    </LinearLayout>
</LinearLayout>