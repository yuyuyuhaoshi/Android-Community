<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/bar">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_frame">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/comment"
                android:layout_marginBottom="5dp"
                tools:ignore="NestedWeights" />
            <ImageView
                android:id="@+id/comment_under_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/under_line_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/atMe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/atMe"
                android:layout_marginBottom="5dp"
                tools:ignore="NestedWeights" />
            <ImageView
                android:id="@+id/atMe_under_line"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/under_line_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/notice"
                android:layout_marginBottom="5dp"
                tools:ignore="NestedWeights" />
            <ImageView
                android:id="@+id/notice_under_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/under_line_black"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/notification_list_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>