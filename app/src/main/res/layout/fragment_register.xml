<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/offset_22dp"
            android:background="@drawable/edttevie_frame"
            android:hint="@string/login_admin_username"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/offset_22dp"
            android:layout_marginLeft="@dimen/offset_22dp"
            android:layout_marginRight="@dimen/offset_22dp"
            android:layout_marginTop="@dimen/offset_6dp"
            android:background="@drawable/edttevie_frame"
            android:hint="@string/login_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/offset_22dp"
            android:layout_marginLeft="@dimen/offset_22dp"
            android:layout_marginRight="@dimen/offset_22dp"
            android:layout_marginTop="@dimen/offset_6dp"
            android:background="@drawable/edttevie_frame"
            android:hint="@string/login_admin_email" />

        <Button
            android:layout_width="@dimen/offset_200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/offset_10dp"
            android:background="@drawable/button_ok"
            android:text="@string/login_ok" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>