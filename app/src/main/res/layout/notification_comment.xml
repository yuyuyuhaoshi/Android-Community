<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/replay_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/jerry_zheng"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/replay_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/replay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/magician"/>
                <TextView
                    android:id="@+id/replay_date"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5月20日"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复我："/>
                <TextView
                    android:id="@+id/replay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给你续一秒"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_frame">
        <TextView
            android:id="@+id/final_text_my_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="我的评论："/>
        <TextView
            android:id="@+id/text_my_comment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/final_text_my_comment"
            android:text="苟利国家生死以，岂因祸福避趋之"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/see_details"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="查看详细"/>
    </RelativeLayout>
</LinearLayout>