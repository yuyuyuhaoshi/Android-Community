<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/replay_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/jerry_zheng"/>
            <ImageView
                android:id="@+id/red_dot"
                android:layout_alignParentEnd="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_red_dot"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/replay_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/magician"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/liked_your_comment"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/replay_date"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5月20日"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/replay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苟利国家生死以，岂因祸福避趋之"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>