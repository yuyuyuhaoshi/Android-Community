<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_margin="@dimen/login_size_10pt"
            android:background="@drawable/xiaokuang"
            android:layout_gravity="center"
            android:id="@+id/login_edt_name"
            android:layout_height="match_parent"
            android:hint="用户名/邮箱"
            android:layout_width="match_parent" />

        <EditText
            android:layout_marginLeft="@dimen/login_size_10pt"
            android:layout_marginRight="@dimen/login_size_10pt"
            android:layout_marginBottom="@dimen/login_size_10pt"
            android:layout_marginTop="@dimen/login_size_10pt"
            android:background="@drawable/xiaokuang"
            android:layout_gravity="center"
            android:id="@+id/login_edt_password"
            android:layout_height="match_parent"
            android:hint="密码"
            android:layout_width="match_parent" />
        <Button
            android:layout_gravity="center"
            android:background="@drawable/anniu"
            android:layout_width="@dimen/offset_200dp"
            android:layout_height="wrap_content"
            android:text="确定"/>
        <LinearLayout
            android:layout_margin="@dimen/offset_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_2dp"
                android:layout_weight="1"
                android:background="@color/colorgray"
                android:layout_marginBottom="@dimen/offset_10dp"
                android:layout_marginTop="@dimen/offset_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第三方登录"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_2dp"
                android:layout_weight="1"
                android:background="@color/colorgray"
                android:layout_marginBottom="@dimen/offset_10dp"
                android:layout_marginTop="@dimen/offset_10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginTop="@dimen/offset_0dp"
                android:layout_marginLeft="@dimen/login_size_10pt"
                android:layout_width="@dimen/offset_75dp"
                android:layout_height="@dimen/offset_75dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@drawable/qq" />
            <ImageButton
                android:layout_marginLeft="@dimen/login_size_25pt"
                android:layout_marginTop="@dimen/offset_0dp"
                android:layout_width="@dimen/offset_75dp"
                android:layout_height="@dimen/offset_75dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@drawable/wechat"/>
            <ImageButton
                android:layout_marginLeft="@dimen/login_size_25pt"
                android:layout_marginTop="@dimen/offset_0dp"
                android:layout_width="@dimen/offset_75dp"
                android:layout_height="@dimen/offset_75dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@drawable/weibo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/login_size_5pt"
                android:layout_marginLeft="@dimen/login_size_22pt"
                android:layout_marginRight="@dimen/login_size_22pt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_70dp"
                android:layout_weight="1"
                android:text="QQ"/>
            <TextView
                android:layout_marginTop="@dimen/login_size_5pt"
                android:layout_marginLeft="@dimen/login_size_22pt"
                android:layout_marginRight="@dimen/login_size_22pt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_70dp"
                android:layout_weight="1"
                android:text="微信"/>
            <TextView
                android:layout_marginTop="@dimen/login_size_5pt"
                android:layout_marginLeft="@dimen/login_size_22pt"
                android:layout_marginRight="@dimen/login_size_22pt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_70dp"
                android:layout_weight="1"
                android:text="微博"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>