<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimaryDark</item>
        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimaryDark</item>
        <!--解决左边一直有一块边距的问题 contentInsetStart = 0 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <style name="ArticleTittleText">
        <item name="android:textSize">@dimen/articles_tittle_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>


    <style name="AttentionButton">
        <item name="android:layout_width">@dimen/offset_60dp</item>
        <item name="android:layout_height">@dimen/offset_30dp</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:background">@drawable/attention_button_shape</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

</resources>
